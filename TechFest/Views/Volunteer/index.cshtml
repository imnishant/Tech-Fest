@model IEnumerable<TechFest.Volunteer>

@{
    ViewBag.Title = "Index";
    TechFestDBEntities db = new TechFestDBEntities();

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("USN")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Department")
        </th>
        <th>
            @Html.DisplayName("Semester")
        </th>
        <th>
            @Html.DisplayName("Section")
        </th>
        <th></th>
    </tr>

    @foreach (var obj in Model)
    {
        
            var item = db.Students.FirstOrDefault(u => u.usn == obj.usn);
            var department = db.Departments.FirstOrDefault(u => u.d_id == item.d_id);
            var cls = db.Classes.FirstOrDefault(u => u.c_id == item.c_id);
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.usn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => department.d_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cls.sem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cls.section)
            </td>
            <td>
                    -->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <span>
                        @Html.ActionLink("Volunteer", "index", "Volunteer")
                    </span>
                }
            </td>
        </tr>
    }

</table>
